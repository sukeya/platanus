{
  "version": 10,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 31
  },
  "configurePresets": [
    {
      "name": "test",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "PLATANUS_BUILD_TESTS": "ON"
      },
      "generator": "Ninja"
    },
    {
      "name": "test_local",
      "inherits": ["test"],
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "test_gcc",
      "inherits": ["test"],
      "cacheVariables": {
        "CMAKE_CXX_COMPILER": "g++",
        "CMAKE_CXX_FLAGS": "-O1 -g -fno-omit-frame-pointer -fsanitize=address,undefined,pointer-compare,pointer-subtract,leak -D EIGEN_MAX_ALIGN_BYTES=0 -U_FORTIFY_SOURCE -D_FORTIFY_SOURCE=3 -D_GLIBCXX_ASSERTIONS -fstrict-flex-arrays=3 -fstack-clash-protection -fstack-protector-strong"
      }
    },
    {
      "name": "clang",
      "cacheVariables": {
        "CMAKE_CXX_COMPILER": "clang++",
        "CMAKE_LINKER_TYPE": "LLD"
      }
    },
    {
      "name": "test_clang",
      "inherits": ["test", "clang"],
      "cacheVariables": {
        "CMAKE_CXX_FLAGS": "-stdlib=libc++ -O1 -g -fno-omit-frame-pointer -fsanitize=address,undefined,leak -D EIGEN_MAX_ALIGN_BYTES=0 -U_FORTIFY_SOURCE -D_FORTIFY_SOURCE=3 -D_LIBCPP_ASSERT -fstrict-flex-arrays=3 -fstack-clash-protection -fstack-protector-strong"
      }
    },
    {
      "name": "test_clang_memory",
      "inherits": ["test", "clang"],
      "cacheVariables": {
        "CMAKE_CXX_FLAGS": "-stdlib=libc++ -O1 -g -fno-omit-frame-pointer -fsanitize=memory -U_FORTIFY_SOURCE -D_FORTIFY_SOURCE=3 -D_LIBCPP_ASSERT -fstrict-flex-arrays=3 -fstack-clash-protection -fstack-protector-strong"
      }
    },
    {
      "name": "benchmark",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "PLATANUS_BUILD_BENCHMARK": "ON"
      },
      "generator": "Ninja"
    },
    {
      "name": "benchmark_gcc",
      "inherits": ["benchmark"],
      "cacheVariables": {
        "CMAKE_CXX_COMPILER": "g++",
        "CMAKE_CXX_FLAGS": "-O2 -DNDEBUG"
      }
    },
    {
      "name": "benchmark_clang",
      "inherits": ["benchmark", "clang"],
      "cacheVariables": {
        "CMAKE_CXX_FLAGS": "-stdlib=libc++ -O2 -DNDEBUG"
      }
    }
  ]
}
