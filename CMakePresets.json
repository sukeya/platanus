{
  "version": 7,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 27,
    "patch": 7
  },
  "configurePresets": [
    {
      "name": "test",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "PLATANUS_BUILD_TESTS": "ON"
      },
      "generator": "Ninja"
    },
    {
      "name": "vcpkg",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
      }
    },
    {
      "name": "test_vcpkg_gcc",
      "inherits": ["test", "vcpkg"],
      "cacheVariables": {
        "CMAKE_CXX_COMPILER": "g++",
        "CMAKE_CXX_FLAGS": "-g -fno-omit-frame-pointer -fsanitize=address,undefined,pointer-compare,pointer-subtract,leak",
        "VCPKG_C_FLAGS": "-g -fno-omit-frame-pointer -fsanitize=address,undefined,pointer-compare,pointer-subtract,leak",
        "VCPKG_CXX_FLAGS": "-g -fno-omit-frame-pointer -fsanitize=address,undefined,pointer-compare,pointer-subtract,leak"
      }
    },
    {
      "name": "clang",
      "cacheVariables": {
        "CMAKE_CXX_COMPILER": "clang++",
        "CMAKE_LINKER_TYPE": "LLD"
      }
    },
    {
      "name": "test_vcpkg_clang",
      "inherits": ["test", "vcpkg", "clang"],
      "cacheVariables": {
        "CMAKE_CXX_FLAGS": "-stdlib=libc++ -g -fno-omit-frame-pointer -fsanitize=address,undefined,leak",
        "VCPKG_C_FLAGS": "-stdlib=libc++ -g -fno-omit-frame-pointer -fsanitize=address,undefined,leak",
        "VCPKG_CXX_FLAGS": "-stdlib=libc++ -g -fno-omit-frame-pointer -fsanitize=address,undefined,leak"
      }
    },
    {
      "name": "test_vcpkg_clang_memory",
      "inherits": ["test", "vcpkg", "clang"],
      "cacheVariables": {
        "CMAKE_CXX_FLAGS": "-stdlib=libc++ -g -fno-omit-frame-pointer -fsanitize=memory",
        "VCPKG_C_FLAGS": "-stdlib=libc++ -g -fno-omit-frame-pointer -fsanitize=memory",
        "VCPKG_CXX_FLAGS": "-stdlib=libc++ -g -fno-omit-frame-pointer -fsanitize=memory"
      }
    }
  ]
}
